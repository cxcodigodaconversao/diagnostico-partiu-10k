            const topicFeedback = feedbacks[topicName];
            if (!topicFeedback) return "Continue desenvolvendo suas habilidades!";

            if (percentage >= 80) return topicFeedback.excellent;
            if (percentage >= 60) return topicFeedback.good;
            if (percentage >= 40) return topicFeedback.improvement;
            return topicFeedback.urgent;
        }

        function getFeedbackClass(percentage) {
            if (percentage >= 80) return 'excellent';
            if (percentage >= 60) return 'good';
            if (percentage >= 40) return 'improvement';
            return 'urgent';
        }

        function updateProgress() {
            const progress = ((currentQuestionIndex + 1) / allQuestions.length) * 100;
            document.getElementById('progressFill').style.width = `${progress}%`;
            document.getElementById('currentQuestion').textContent = currentQuestionIndex + 1;
            document.getElementById('progressPercent').textContent = `${Math.round(progress)}%`;
        }

        function displayQuestion() {
            const question = allQuestions[currentQuestionIndex];
            
            document.getElementById('topicIndicator').textContent = question.topicLabel;
            document.getElementById('questionNumber').textContent = `Pergunta ${currentQuestionIndex + 1}/26`;
            document.getElementById('questionText').textContent = question.text;
            
            // Update scale labels
            const labels = document.querySelectorAll('.scale-labels span');
            labels[0].textContent = question.labels[0];
            labels[1].textContent = question.labels[1];
            
            // Clear previous selection
            const radioButtons = document.querySelectorAll('input[name="currentAnswer"]');
            radioButtons.forEach(radio => radio.checked = false);
            
            // Restore previous answer if exists
            if (answers[question.id] !== undefined) {
                document.getElementById(`answer${answers[question.id]}`).checked = true;
            }
            
            updateNavigationButtons();
            updateProgress();
        }

        function updateNavigationButtons() {
            const prevBtn = document.getElementById('prevBtn');
            const nextBtn = document.getElementById('nextBtn');
            
            // Show/hide previous button
            if (currentQuestionIndex === 0) {
                prevBtn.style.visibility = 'hidden';
            } else {
                prevBtn.style.visibility = 'visible';
            }
            
            // Check if answer is selected
            const selectedAnswer = document.querySelector('input[name="currentAnswer"]:checked');
            nextBtn.disabled = !selectedAnswer;
            
            // Change button text for last question
            if (currentQuestionIndex === allQuestions.length - 1) {
                nextBtn.textContent = 'Ver Resultado';
            } else {
                nextBtn.textContent = 'Próxima';
            }
        }

        function saveCurrentAnswer() {
            const selectedAnswer = document.querySelector('input[name="currentAnswer"]:checked');
            if (selectedAnswer) {
                const question = allQuestions[currentQuestionIndex];
                answers[question.id] = parseInt(selectedAnswer.value);
            }
        }

        function nextQuestion() {
            saveCurrentAnswer();
            
            if (currentQuestionIndex < allQuestions.length - 1) {
                currentQuestionIndex++;
                
                // Add fade effect
                const card = document.getElementById('questionCard');
                card.classList.add('fade-out');
                
                setTimeout(() => {
                    displayQuestion();
                    card.classList.remove('fade-out');
                    card.classList.add('fade-in');
                    
                    setTimeout(() => {
                        card.classList.remove('fade-in');
                    }, 300);
                }, 300);
            } else {
                // Show results
                showResults();
            }
        }

        function previousQuestion() {
            if (currentQuestionIndex > 0) {
                saveCurrentAnswer();
                currentQuestionIndex--;
                
                // Add fade effect
                const card = document.getElementById('questionCard');
                card.classList.add('fade-out');
                
                setTimeout(() => {
                    displayQuestion();
                    card.classList.remove('fade-out');
                    card.classList.add('fade-in');
                    
                    setTimeout(() => {
                        card.classList.remove('fade-in');
                    }, 300);
                }, 300);
            }
        }

        function calculateResults() {
            const topicResults = {};
            let totalScore = 0;
            let totalQuestions = 0;

            topics.forEach(topic => {
                let topicScore = 0;
                let topicQuestions = 0;
                
                topic.questions.forEach((question, index) => {
                    const questionId = `${topic.name}_${index}`;
                    if (answers[questionId] !== undefined) {
                        topicScore += answers[questionId];
                        topicQuestions++;
                    }
                });
                
                const averageScore = topicQuestions > 0 ? topicScore / topicQuestions : 0;
                topicResults[topic.name] = {
                    score: averageScore,
                    percentage: (averageScore / 10) * 100,
                    label: topic.label,
                    color: topic.color
                };
                
                totalScore += topicScore;
                totalQuestions += topicQuestions;
            });

            const overallAverage = totalQuestions > 0 ? totalScore / totalQuestions : 0;
            const overallPercentage = (overallAverage / 10) * 100;

            return {
                individual: topicResults,
                total: totalScore,
                average: overallAverage,
                percentage: overallPercentage
            };
        }

        function getScoreLevel(percentage) {
            if (percentage >= 80) return { 
                level: 'Professor Expert', 
                message: 'Você já tem uma base muito sólida! Está próximo dos 10K, precisa apenas refinar alguns detalhes estratégicos.' 
            };
            if (percentage >= 60) return { 
                level: 'Professor Intermediário+', 
                message: 'Você tem um bom potencial, mas ainda há gaps importantes que estão limitando seu crescimento para os 10K.' 
            };
            if (percentage >= 40) return { 
                level: 'Professor em Evolução', 
                message: 'Há muito espaço para crescimento. Com as estratégias certas, você pode dobrar sua renda atual!' 
            };
            return { 
                level: 'Professor Iniciante', 
                message: 'Você está no ponto perfeito para uma transformação completa! Tem todo o potencial para chegar aos 10K.' 
            };
        }

        function createRadarChart(results) {
            const ctx = document.getElementById('radarChart').getContext('2d');
            
            if (radarChart) {
                radarChart.destroy();
            }

            const labels = topics.map(topic => topic.label);
            const dataPoints = topics.map(topic => results.individual[topic.name].score);
            const idealPoints = new Array(topics.length).fill(10);

            // Detectar se é mobile para ajustar configurações
            const isMobile = window.innerWidth <= 768;
            const pointLabelSize = isMobile ? 9 : 10;
            const legendSize = isMobile ? 12 : 14;

            radarChart = new Chart(ctx, {
                type: 'radar',
                data: {
                    labels: labels,
                    datasets: [
                        {
                            label: 'Seu Nível Atual',
                            data: dataPoints,
                            borderColor: '#3b82f6',
                            backgroundColor: 'rgba(59, 130, 246, 0.2)',
                            borderWidth: 3,
                            pointBackgroundColor: '#3b82f6',
                            pointBorderColor: '#fbbf24',
                            pointBorderWidth: 3,
                            pointRadius: 6
                        },
                        {
                            label: 'Nível para 10K (Meta)',
                            data: idealPoints,
                            borderColor: '#fbbf24',
                            backgroundColor: 'rgba(251, 191, 36, 0.1)',
                            borderWidth: 2,
                            pointBackgroundColor: '#fbbf24',
                            pointBorderColor: '#3b82f6',
                            pointBorderWidth: 2,
                            pointRadius: 4
                        }
                    ]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: true,
                    plugins: {
                        legend: {
                            labels: {
                                color: '#1f2937',
                                font: {
                                    size: legendSize,
                                    weight: 'bold',
                                    family: 'Poppins'
                                },
                                padding: 20,
                                usePointStyle: true
                            },
                            position: 'bottom'
                        }
                    },
                    scales: {
                        r: {
                            beginAtZero: true,
                            max: 10,
                            ticks: {
                                stepSize: 2,
                                color: '#6b7280',
                                backdropColor: 'transparent',
                                font: {
                                    size: 10
                                }
                            },
                            grid: {
                                color: 'rgba(107, 114, 128, 0.2)'
                            },
                            angleLines: {
                                color: 'rgba(107, 114, 128, 0.2)'
                            },
                            pointLabels: {
                                color: '#374151',
                                font: {
                                    size: pointLabelSize,
                                    weight: 'bold',
                                    family: 'Inter'
                                },
                                padding: 15
                            }
                        }
                    }
                }
            });
        }

        function displayDetailedResults(results) {
            const container = document.getElementById('detailedResults');
            container.innerHTML = '';

            topics.forEach(topic => {
                const result = results.individual[topic.name];
                const gap = 10 - result.score;
                const gapPercentage = (gap / 10) * 100;
                const feedback = getTopicFeedback(topic.name, result.score, result.percentage);
                const feedbackClass = getFeedbackClass(result.percentage);

                const resultItem = document.createElement('div');
                resultItem.className = 'result-item';
                resultItem.innerHTML = `
                    <div class="result-title">${result.label}</div>
                    <div class="result-score">${result.score.toFixed(1)}/10 (${result.percentage.toFixed(0)}%)</div>
                    <div class="result-bar">
                        <div class="result-fill" style="width: ${result.percentage}%;"></div>
                    </div>
                    <div class="result-gap">
                        Potencial de melhoria: ${gap.toFixed(1)} pontos (${gapPercentage.toFixed(0)}%)
                    </div>
                    <div class="result-feedback ${feedbackClass}">
                        ${feedback}
                    </div>
                `;
                container.appendChild(resultItem);
            });
        }

        function showResults() {
            const results = calculateResults();
            const scoreInfo = getScoreLevel(results.percentage);

            // Update score display
            document.getElementById('totalScore').textContent = `${results.percentage.toFixed(0)}%`;
            document.getElementById('scoreLevel').textContent = `${scoreInfo.level}`;
            document.getElementById('scoreMessage').textContent = scoreInfo.message;

            // Create radar chart
            createRadarChart(results);

            // Display detailed results
            displayDetailedResults(results);

            // Hide quiz and show results
            document.getElementById('quizSection').style.display = 'none';
            document.querySelector('.progress-section').style.display = 'none';
            document.getElementById('results').style.display = 'block';
            
            // Scroll to top
            window.scrollTo({ top: 0, behavior: 'smooth' });
        }

        // Event listeners
        document.addEventListener('change', function(e) {
            if (e.target.name === 'currentAnswer') {
                updateNavigationButtons();
            }
        });

        // Initialize
        displayQuestion();
    </script>
</body>
</html>
